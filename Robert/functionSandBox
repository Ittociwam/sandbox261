//This Happy Code Tells Me If you should be working out at your age and what your heart rate should be.
function heartRate(){
for (i = 0; i < age; i++) {
}
if (i <= 5) {
window.alert("You are too young to be worrying about this!");
}
else if (i > 5 && i < 86){
aa = age
maxHeart = aa * .65;
minHeart = aa * .85;
window.alert("Your heart rate should be between " + minHeart + " and " + maxHeart ".");
}
else (i >= 86) {
window.alert("MAN YOU ARE OLD!!! Your heart rate should be between " + minHeart + " and " + maxHeart ".");
}
}

