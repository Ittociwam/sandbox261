}

function twoCrazy (aa, bb, cc) {
var first = ["Super", "Man", "47", "Outstanding", "Ironman", "30", "Fantastic", "Four", "4", ""];
var last = ["Rap", "God", "Eminem", "Reggae", "Bob", "420", "Milk", "Man", "Aquabats", ""];
var firstName = first[aa];
var lastName = last[cc];
if (bb >= 6) {
var middle = "The";
return middle;
}
else (bb <=5) {
var middle = "";
return middle;
var fullName = "The " + firstName +  middle  + lastName ".";
}

